{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ³ Start MongoDB",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d", "mongodb"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ›‘ Stop MongoDB",
      "type": "shell", 
      "command": "docker-compose",
      "args": ["down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ—ï¸ Build Backend",
      "type": "shell",
      "command": "./mvnw",
      "args": ["clean", "compile", "-DskipTests"],
      "options": {
        "cwd": "${workspaceFolder}/marketplace-backend"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$javac"
    },
    {
      "label": "ğŸš€ Run Backend",
      "type": "shell",
      "command": "./mvnw",
      "args": ["spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}/marketplace-backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "ğŸ“¦ Install Frontend Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/marketplace-frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ¨ Run Frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/marketplace-frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "ğŸ”„ Full Stack Start",
      "dependsOrder": "sequence",
      "dependsOn": [
        "ğŸ³ Start MongoDB",
        "ğŸš€ Run Backend",
        "ğŸ¨ Run Frontend"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always"
      }
    }
  ]
}